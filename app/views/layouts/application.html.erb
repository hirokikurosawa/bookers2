<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
  </head>

  <body>
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand p-3 text-white" href="/">Bookers</a>
        <button class="navbar-toggler navbar-dark" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user.id), class: 'nav-link text-white' do %>
            <i class="fas fa-home"></i>
            Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class: 'nav-link text-white' do %>
            <i class="fas fa-users"></i>
            Users
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to books_path, class: 'nav-link text-white' do %>
            <i class="fas fa-book-open"></i>
            Books
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
            <i class="fas fa-sign-out-alt"></i>
            logout
            <% end %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to root_path, class: 'nav-link text-white' do %>
            <i class="fas fa-home"></i>
            Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to home_about_path, class: 'nav-link text-white' do %>
            <i class="fas fa-link"></i>
            About
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
            <i class="fas fa-user-plus"></i>
            sign up
            <% end %>
          </li>
            <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
            <i class="fas fa-sign-in-alt"></i>
            login
            <% end %>
          </li>
          <% end %>
          </ul>
        </div>
      </nav>

    </header>
    <div>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>

    <main>
      <%= yield %>
    </main>
    <footer>
      <div class="text-center">
        CopyRight Infratop.inc
      </div>
    </footer>
  </body>
</html>
