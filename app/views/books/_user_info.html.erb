    <div class="col-md-3"rai>
      <h2>User info</h2>
      <div class="profile-container">
        <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
               <th>introduction</th>
               <th>
               <%= user.introduction %>

               </th>

            </tr>
          </tbody>
        </table>

          <%= link_to edit_user_path(user) do %>
          <i class="btn btn-outline-secondary btn-block fas fa-user-cog"></i>
          <% end %>
      </div>

      <h2>New book</h2>
      <%= form_with model:book, local:true do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <div>
      <%= f.submit 'Create Book' %>
      </div>
      <% end %>
    </div>